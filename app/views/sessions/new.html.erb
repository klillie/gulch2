<h1>Welcome to Gulch Solutions</h1>

<h3> Please imput energy information below</h3>

<div class="row">
  <div class="span20 offset4">
    
    <%=form_for(:session, url: sessions_path) do |f| %>

      <br> <!-- enters a blank line, ie: line break -->
      <%= f.label :zip_code %>
      <%= f.text_field :zip_code, {:value => '07004'} %>

      <br> <!-- enters a blank line, ie: line break -->
      <%= f.label :demand_in_kW %>
      <%= f.text_field :demand_in_kW, {:value => '100'} %>

      <br> <!-- enters a blank line, ie: line break -->
      <%= f.label :usage_in_kWh %>
      <%= f.text_field :usage_in_kWh, {:value => '10000'} %>

      <br> <!-- enters a blank line, ie: line break -->
      <%= f.label :bill_date %>
      <%= f.text_field :bill_date, {:value => '10/1/2013'} %>

      <br> <!-- enters a blank line, ie: line break -->
      <%= f.label :phases %>
      <%= f.text_field :phases, {:value => '3-phase'} %>

      <br> <!-- enters a blank line, ie: line break -->
      <%= f.submit "Submit", class: "btn btn-med btn-custom" %>
    <% end %>
  </div>
</div>
